<table class="table table-striped table-condensed">
  <% @todos.each do |todo| %>
  <tr>
    <td> <%= check_box_tag :check, true, todo.check, data: { url: check_todo_path(todo), method: :post, remote: true } %> </td>
    <td> <%= todo.name %> </td>
    <td> <%= todo.due_date%> </td>
    <td> <%= todo.note %> </td>
    <td> <%= link_to 'Show', todo_path(todo) %> </td>
    <td> <%= link_to 'Edit', edit_todo_path(todo) %> </td>
    <td> <%= link_to 'Destroy', todo_path(todo), method: :delete, data:{ confirm: "Are you Sure ?"} %> </td>
  </tr>
  <% end %>
</table>
<div class="warning">
<% if flash[:notice] %>
  <div class="notice">Warning Message: <%= flash[:notice] %> !</div>
<% end %>
</div>
<%= link_to 'New Todo', new_todo_path %>
